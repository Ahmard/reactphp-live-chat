{
    "name": "ahmard/reactphp-live-chat",
    "description": "A PHP-based live chat system written on top of Ratchet and ReactPHP",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "cboden/ratchet": "^0.4.3",
        "kevinlebrun/colors.php": "^1.0",
        "ahmard/reactphp-timers": "^1.0",
        "react/http": "^1.5",
        "react/filesystem": "0.1.1",
        "voryx/websocketmiddleware": "^2.0",
        "vlucas/phpdotenv": "^5.1",
        "symfony/console": "^5.1",
        "clue/reactphp-sqlite": "^1.2",
        "symfony/validator": "^5.1",
        "wyrihaximus/react-http-middleware-webroot-preload": "^2.0",
        "firebase/php-jwt": "^5.2",
        "ahmard/quick-route": "^3.8",
        "nesbot/carbon": "^2.53",
        "ahmard/reactphp-querylist": "^0.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Server\\": "src/",
            "Database\\": "database/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('storage/cache') || mkdir('storage/cache');\"",
            "@php -r \"file_exists('storage/cache/route') || mkdir('storage/cache/route');\"",
            "@php -r \"file_exists('storage/logs') || mkdir('storage/logs');\""
        ],
        "analyse": "phpstan analyse",
        "analyze": "@analyse"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.70",
        "symfony/var-dumper": "^5.3"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "wyrihaximus/composer-update-bin-autoload-path": true
        }
    }
}
